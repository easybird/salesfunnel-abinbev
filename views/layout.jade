doctype html
html
    head
        if metaData
            block title
                title= metaData.title

        //-Import Google Icon Font
        link(rel='stylesheet' href=layout.font)
        //-Import materialize.css
        block stylesheets
            link(rel='stylesheet' type='text/css' href=layout.cssFramework media='screen,projection')
            link(rel='stylesheet' type='text/css' href=layout.css media='screen,projection')
        //-Let browser know website is optimized for mobile
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        if layout.externalScripts
            include external/google/scripts/google-analytics.html
    body
        block content
            nav
                include nav/index
            main
                block header
                    include header/index
                block mainContent
            //-Import jQuery before materialize.js
        block javascripts
            script(type='text/javascript' src=layout.jquery)
            script(type='text/javascript' src=layout.cssFrameworkJs)
            script(type='text/javascript' src=layout.jqueryValidation)
            script(type='text/javascript' src=layout.cssJs)